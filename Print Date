#include <stdio.h>

main()
{
  int dia;
  int mes;
  int ano;
  printf("Digite o dia: ");
  scanf("%d", &dia);
  printf("\n\n");
  printf("Digite o mes: ");
  scanf("%d", &mes);
  printf("\n\n");
  printf("Digite o ano: ");
  scanf("%d", &ano);
  printf("\n\n");
  printf("Data:%d/%d/%d",dia,mes,ano);
  return 0;
}
